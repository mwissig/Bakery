
<!-- This changes what is displayed on the page based on the url -->
<% if @pastry == "cakes" %>
  <% @pastry = $cakes %>
  <% @pastrytype = "Cakes" %>
  <% amt = "ea" %>
  <% elsif @pastry == "muffins" %>
      <% @pastry = $muffins %>
      <% @pastrytype = "Muffins" %>
        <% amt = "doz" %>
    <% elsif @pastry == "cookies" %>
        <% @pastry = $cookies %>
          <% @pastrytype = "Cookies" %>
          <% amt = "doz" %>
          <% end %>
          
<!-- Creates divs in a grid for each item and displays them in random order -->
                <div class="subitlecontainer">
                  <h2 class="subtitle">Queen Anne's
                    <%= @pastrytype %>
                  </h2>
                </div>
                <div class="grid">
                  <% text = "" %>
                    <% @pastry.shuffle!.each_index {|i| text << "<div><h3>#{@pastry[i].name}</h3><img class= 'pastry' src='#{@pastry[i].image}'><p>#{@pastry[i].description}</p><b>#{@pastry[i].price} / #{amt}</b></div>" } %>
                      <%= text %>
                    </div>
