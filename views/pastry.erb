<% if @pastry == "cakes" %>
  <% @pastry = $cakes %>
  <% @pastrytype = "Cakes" %>
  <% elsif @pastry == "muffins" %>
      <% @pastry = $muffins %>
      <% @pastrytype = "Muffins" %>
    <% elsif @pastry == "cookies" %>
        <% @pastry = $cookies %>
          <% @pastrytype = "Cookies" %>
          <% end %>

                <div class="subitlecontainer">
                  <h2 class="subtitle">Queen Anne's
                    <%= @pastrytype %>
                  </h2>
                </div>
                <div class="grid">
                  <% text = "" %>
                    <% @pastry.shuffle!.each_index {|i| text << "<div><h3>#{@pastry[i].name}</h3><img class= 'pastry' src='#{@pastry[i].image}'><p>#{@pastry[i].description}</p><b>#{@pastry[i].price} / doz</b></div>" } %>
                      <%= text %>
                    </div>
